---
import socialData from '@data/socialhandles.json';
import Anchor from '@components/ui/Anchor.astro';
interface Props {
  handlesToShow: string[];
  class?: string;
  [key: string]: any;
}
const { handlesToShow, class: className, ...rest } = Astro.props;
const filteredHandles = socialData.filter(handle => handlesToShow.includes(handle.title));
---
{
  filteredHandles.map((handle) => (
    <Anchor href={handle.url} target="_blank" rel="noopener noreferrer" aria-label={`Visit my ${handle.title} profile.`} class:list={[className]} {...rest}>{handle.title}</Anchor>
  ))
}