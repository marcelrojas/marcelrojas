---
import { ClientRouter } from 'astro:transitions';
import '@styles/variables.css';
import '@styles/global.css';
import { SITE_TITLE } from '@types/consts';
import FallbackImage from '/public/images/og-logo.png';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = FallbackImage } = Astro.props;
---
<!-- Global Metadata -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover" />
<meta name="theme-color" content="#000000" />
<meta name="msapplication-TileColor" content="#000000" />
<meta name="msapplication-config" content="/browserconfig.xml" />
<meta name="application-name" content={SITE_TITLE} />
<meta name="apple-mobile-web-app-title" content={SITE_TITLE} />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
<meta name="mobile-web-app-capable" content="yes" />
<link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg" />
<link rel="icon" type="image/x-icon" sizes="any" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.svg" />
<link rel="icon" type="image/svg+xml" sizes="32x32" href="/favicon-32x32.svg" />
<link rel="icon" type="image/svg+xml" sizes="16x16" href="/favicon-16x16.svg" />
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
<link rel="manifest" href="/manifest.webmanifest" crossorigin="anonymous" />
<link rel="search" type="application/opensearchdescription+xml" title="Marcel Rojas: By Marcel Rojas" href="/opensearch.xml" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={new URL('rss.xml', Astro.site)} />
<meta name="keywords" content="marcelrojas, Marcel Rojas, whyismarcel, immarcelrojas, immarcel, MarcelRojas, marcel rojas, Juan Rojas, Juan Marcel Rojas Hernandez" />
<meta name="author" content="Marcel Rojas" />
<meta name="generator" content={Astro.generator} />

<!-- Font Preloads -->
<link rel="preload" href="/fonts/InterVariable.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
<link rel="preload" href="/fonts/InterVariable-Italic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
<link rel="preload" href="/fonts/GeistMono.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
<link rel="preload" href="/fonts/GeistMono-Italic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />
<link rel="canonical" href="https://marcelrojas.marcelrojas.workers.dev" />
<!-- link rel="alternate" href={} hreflang={} /-->

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Web Analytics -->


<!-- Stylesheets -->
<!--
<link rel="stylesheet" as="style" href={GlobalVariables} type="text/css" referrerpolicy="strict-origin-when-cross-origin" />
<link rel="stylesheet" as="style" href={GlobalStyles} type="text/css" referrerpolicy="strict-origin-when-cross-origin" />
-->

<!-- Scripts -->
<script async src="/script.js"></script>

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:site_name" content={SITE_TITLE} />
<meta property="og:url" content={Astro.url} />
<meta property="og:locale" content="en">
<meta property="og:locale:alternate" content="es">
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, Astro.url)} />
<meta property="og:image:type" content="image/jpeg" />

<!-- Twitter / X.com -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:creator" content="@whyismarcel" />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.src, Astro.url)} />

<ClientRouter fallback="animate" />