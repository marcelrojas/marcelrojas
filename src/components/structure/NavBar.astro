---
import Anchor from '@components/Anchor.astro';

const anchors = [
  { href: "/", text: "About" },
  { href: "/services", text: "Services" },
  { href: "/showcase", text: "Showcase" },
  { href: "/blog", text: "Blog" },
  { href: "/shop", text: "Shop" },
];
---

<nav id="haptic-nav" class="navbar" aria-label="Main">
  <ul>
    {anchors.map(link => (
      <li>
        <Anchor variant="platted" size="small" wide="fill" label="text-only" href={link.href}>{link.text}</Anchor>
      </li>
    ))}
  </ul>
</nav>

<style>
  @layer components {
    nav.navbar {
      position: relative;
      width: 100%;
      max-width: 420px;
      height: min-content;
      will-change: opacity, visibility, allow-discrete;
      transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out, allow-discrete 0.3s ease-in-out;
      & > ul {
        position: relative;
        display: flex;
        flex-flow: row;
        justify-content: center;
        gap: 16px;
        & > li {
          position: relative;
          width: fit-content
        }
      }
    }
  }
</style>