---
import { icons, type IconName } from '@types/icons';

interface Props {
  name: IconName;
  class?: string;
  size?: number; // Opcional: para controlar width/height
}

const { name, class: className, size = 24 } = Astro.props;

const svgContent = icons[name];

if (!svgContent) {
  throw new Error(`Icono "${name}" no encontrado en /src/assets/icons/`);
}

// Opcional: Se puede manipular el string svgContent aqu√≠ si es necesario inyectar clases
// directamente al SVG, aunque es mejor hacerlo mediante un contenedor o CSS global.
---

<span class={`${className}`} style={{ width: `${size}px`, height: `${size}px` }} set:html={svgContent} />

<style>
  svg.icon {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    vertical-align: middle;
    fill: currentColor
  }
</style>