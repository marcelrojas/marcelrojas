---
import Layout from '@layouts/Layout.astro';
import PageHeader from '@components/structure/PageHeader.astro';

const {
  title = 'Shop',
  description = 'Explore the latest products in my shop.',
} = Astro.props;
---
<Layout title={title} description={description}>
  <PageHeader title={title} />
  <section>
    <h2>Resources</h2>
    <p>Explore my resources for guides, tutorials, and tools to help you succeed.</p>
    <ul>
      <li><a href="/resources/guide1">Guide 1</a></li>
      <li><a href="/resources/tutorial1">Tutorial 1</a></li>
      <li><a href="/resources/tool1">Tool 1</a></li>
    </ul>
  </section>
  <section class="product-showcase">
    <div class="product-grid">
      <a class="product-card product-card--t1" href="/shop/">
        <h3 class="product-title">Title</h3>
        <p class="product-description">Description</p>
        <span class="product-badge">Now $99</span>
      </a>
      <a class="product-card product-card--c1" href="/shop/">
        <h3 class="product-title">Title</h3>
        <p class="product-description">Description</p>
        <span class="product-badge">$299</span>
      </a>
      <a class="product-card product-card--composer" href="/shop/composer">
        <h3 class="product-title">Title</h3>
        <p class="product-description">Description</p>
      </a>
    </div>
  </section>
</Layout>