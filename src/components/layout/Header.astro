---
import Anchor from '@components/ui/Anchor.astro';
import Clock from '@components/shared/Clock.svelte';

const navAnchor = [
  { href: "/", text: "About" },
  { href: "/services", text: "Services" },
  { href: "/showcase", text: "Showcase" },
  { href: "/blog", text: "Blog" },
  { href: "/shop", text: "Shop" },
];
---
<header id="globalheader">
  <div class="content">
    <a href="#main" tabindex="0" class="skip-to-content">Skip to main content</a>
    <Clock client:load />
    <h1>Marcel<br />Rojas</h1>
    <nav class="globalnav haptic-nav" aria-label="Global">
      <ul>
        {navAnchor.map(link => (
          <li>
            <Anchor wide="fill" href={link.href}>{link.text}</Anchor>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
<style>
  header#globalheader {
    position: relative;
    z-index: 40;
    padding-left: max(var(--spacing-sal) + 22px);
    padding-right: max(var(--spacing-sar) + 22px);
    & > div.content {
      position: relative;
      height: min-content;
      overflow: clip;
      display: flex;
      flex-flow: column;
      padding-top: max(var(--spacing-sat) + 56px);
      padding-bottom: max(var(--spacing-sab) + 40px);
      gap: 28px;
      align-items: center;
      & a.skip-to-content {
        position: absolute;
        overflow: hidden;
        clip: rect(0 0 0 0);
        height: 1px;
        width: 1px;
        margin: -1px;
        &:focus:not(:focus-visible) {
          background-color: rgba(0, 0, 0, 0);
          outline: none;
          -webkit-box-decoration-break: slice;
          box-decoration-break: slice;
        }
        &:focus {
          top: .5em;
          left: .25em;
          overflow: visible;
          clip: initial;
          height: auto;
          width: auto;
          margin: 0;
          box-shadow: 0 0 0 3px #0b0c0c, 0 0 .4em 0em #1f1f22;
          padding: .5em .5em;
        }
        &:focus-visible {
          background-color: #fff;
          outline: 3px solid #0b0c0c;
          outline-offset: 1px;
          -webkit-box-decoration-break: clone;
          box-decoration-break: clone;
        }
      }
      & > h1 {
        position: relative;
        width: auto;
        max-width: 496px;
        height: auto;
        white-space: pre-wrap;
        word-break: break-word;
        word-wrap: break-word;
        font-family: var(--font-family-sans);
        font-size: calc(calc(1rem * 5) * 1);
        font-weight: var(--font-weight-semibold);
        line-height: 1.1;
        letter-spacing: -0.01em;
        text-align: center;
        color: oklch(0.19 0 0 / 0.1)
      }
      & > nav {
        position: relative;
        width: 100%;
        max-width: 420px;
        height: min-content;
        will-change: opacity, visibility, allow-discrete;
        transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out, allow-discrete 0.3s ease-in-out;
        & > ul {
          position: relative;
          display: flex;
          flex-flow: row;
          justify-content: center;
          gap: 4px;
          & > li {
            position: relative;
            width: 100%;
            max-width: 100%;
            &:first-child > a {
              border-radius: 32px 8px 8px 32px
            }
            &:last-child > a {
              border-radius: 8px 32px 32px 8px
            }
            &:not(:first-child):not(:last-child) > a {
              border-radius: 8px
            }
            & > a {
              padding-block: 10px;
              font-size: var(--font-size-14);
              color: var(--color-label-primary);
              box-shadow: inset 0px 1px 0px 0px oklch(0.94 0 0 / 0);
              opacity: 1;
              background-color: oklch(0.96 0 0)
            }
          }
        }
      }
    }
  }
</style>