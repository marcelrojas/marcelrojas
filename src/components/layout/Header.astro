---
import Button from '@components/ui/Button.astro';
import Clock from '@components/shared/Clock.svelte';

const navAnchor = [
  { href: "/", text: "About" },
  { href: "/services", text: "Services" },
  { href: "/showcase", text: "Showcase" },
  { href: "/blog", text: "Blog" },
  { href: "/shop", text: "Shop" },
];
---
<header id="globalheader">
  <div class="content" role="dialog" aria-modal="true" tabindex="-1">
    <Clock client:load />
    <div class="framer-1smtx7k">
      <h1>Marcel Rojas</h1>
    </div>
    <nav id="globalnav" class="haptic-nav" aria-label="Global">
      <ul id="globalnav-list">
        {navAnchor.map(link => (
          <li class="nav-item">
            <a href={link.href} class="nav-anchor">{link.text}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
<style>
  header#globalheader {
    position: relative;
    padding-left: max(var(--spacing-sal) + 22px);
    padding-right: max(var(--spacing-sar) + 22px);
    & div.content {
      position: relative;
      height: min-content;
      overflow: clip;
      display: flex;
      flex-flow: column;
      padding-top: max(var(--spacing-sat) + 56px);
      padding-bottom: max(var(--spacing-sab) + 40px);
      gap: 28px;
      align-items: center;
      & div.framer-1smtx7k {
        position: relative;
        width: auto;
        max-width: 496px;
        height: auto;
        white-space: pre-wrap;
        word-break: break-word;
        word-wrap: break-word;
        & h1 {

        }
      }
      nav#globalnav {
        position: sticky;
        width: 100%;
        max-width: 420px;
        height: min-content;
        will-change: opacity, visibility, allow-discrete;
        transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out, allow-discrete 0.3s ease-in-out;
        & ul {
          position: relative;
          width: 100%;
          height: min-content;
          display: flex;
          flex-flow: row;
          flex: none;
          place-content: center;
          align-items: center;
          gap: 4px;
          & li {
            position: relative;
            & a.nav-anchor {
              &:first-child {
                border-radius: 32px 8px 8px 32px
              }
              &:last-child {
                border-radius: 8px 32px 32px 8px
              }
              &:not(:first-child):not(:last-child) {
                  border-radius: 8px
              }
              height: 40px;
              box-shadow: inset 0px 1px 0px 0px oklch(0.94 0 0 / 0);
              opacity: 1;
              background-color: oklch(0.96 0 0);
              color: var(--color-label-primary);
              text-decoration: none;
              will-change: color, background-color, border-radius, transform;
              transition: color 150ms, background-color 150ms, border-radius 150ms, transform 150ms;
              &:hover {
                color: var(--color-primary);
                transform: scale(2px)
              }
              &:active {
                color: var(--color-primary);
                transform: scale(2px)
              }
            }
          }
        }
      }
    }
  }
</style>