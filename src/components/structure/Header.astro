---
import Clock from '@components/decorators/Clock.svelte';
import Logo from '@components/Logo.astro';
import NavBar from '@components/structure/NavBar.astro';
---

<header id="header">
  <div class="content">
    <Clock client:load />
    <Logo />
    <NavBar />
  </div>
</header>

<style>
  @layer components {
    header#header {
      position: relative;
      z-index: 40;
      padding-left: max(var(--spacing-sal) + 22px);
      padding-right: max(var(--spacing-sar) + 22px);
      & div.content {
        position: relative;
        height: min-content;
        overflow: clip;
        display: flex;
        flex-flow: column;
        padding-top: max(var(--spacing-sat) + 56px);
        padding-bottom: max(var(--spacing-sab) + 40px);
        gap: 28px;
        align-items: center
      }
    }
  }
</style>