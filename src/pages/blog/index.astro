---
import Layout from '@layouts/Layout.astro';
import PageHeader from '@components/structure/PageHeader.astro';
import TileMosaic from '@components/structure/TileMosaic.astro';
import TileList from '@components/structure/TileList.astro';

const {
  title = 'Blog',
  description = 'Latest posts and updates.',
} = Astro.props;
---

<Layout title={title} description={description}>
  <PageHeader title={title} />
  <TileMosaic />
  <TileList />
</Layout>