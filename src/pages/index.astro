---
import Layout from '@layouts/Layout.astro';
import PageHeader from '@components/layout/PageHeader.astro';
import Anchor from '@components/ui/Anchor.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../types/consts';

const {
  title = 'About',
} = Astro.props;
---
<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <header class="product-card">
    <audio class="hero-audio" loop="" src="/beats.mp3"></audio>
    <h1 class="product-title">Title</h1>
    <p class="product-description">
      <span>Building better business with an individual approach to each client with a wide range of services.</span>
      <span>I'm available for freelance work and collaborations. Whether you have a project in mind or just want to say hello, feel free to reach out!</span>
    </p>
    <Anchor role="button" wide="fit" class="product-badge hero-button audio_trigger" href="https://cal.com/marcelrojas">Book a discovery chat session</Anchor>
  </header>
  <section class="product-showcase">
    <div class="product-grid">
      <article class="product-card">
        <h1 class="product-title">Curriculum</h1>
        <p class="product-description">Location Venezuela<br />Languages Spanish, English<br />Skillset Development, Design and Strategy</p>
        <Anchor class="product-badge" href="/curriculum">Open</Anchor>
      </article>
      <article class="product-card" href="/shop/">
        <h1 class="product-title">Title</h1>
        <p class="product-description">Description.</p>
        <Anchor class="product-badge" href="/curriculum">$299</Anchor>
      </article>
      <article class="product-card">
        <h1 class="product-title">Curriculum</h1>
        <p class="product-description">Location Venezuela<br />Languages Spanish, English<br />Skillset Development, Design and Strategy</p>
        <Anchor class="product-badge" href="/curriculum">Open</Anchor>
      </article>
      <article class="product-card">
        <h1 class="product-title">Subscribe to my newsletter</h1>
        <p class="product-description">Essays and other updates shared infrequently.</p>
      </article>
    </div>
  </section>
</Layout>
<style>
  :root {
    --tracking-common: -0.01em; /* Placeholder: 'common' suele ser un tracking ligero */
    --screen-4xl: 1920px /* Placeholder: EstimaciÃ³n para el breakpoint '4xl' */
  }

  .hero-audio {
    display: none
  }

  #hero-section {
    & .content {
      & .title {
        padding-bottom: 22px;
        font-size: 24px;
        font-weight: 400;
        line-height: 32px;
        letter-spacing: var(--tracking-common)
      }
      & .button {
        margin-top: 15px;
        height: 40px;
        background-color: var(--color-yellow-digital);
        padding-inline: 1.25rem;
        font-size: 16px
      }
    }
  }

  .product-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    &:not(:last-child) > .product-card {
      border-right: 1px solid var(--color-border-default)
    }
    & .product-card {
      min-height: var(--min-height);
      display: block;
      margin-left: auto;
      margin-right: auto;
      padding-top: var(--padding-top);
      text-align: center;
      border-bottom: 1px solid var(--color-border-default);
      &:is(:first-child, :last-child) > .product-card--c3 {
        width: 100%
      }
      &:not(:first-child):not(:last-child) > .product-card--c3 {
        width: 50%
      }
      & .product-title {
        font-size: 32px;
        font-weight: 600;
        line-height: 40px
      }
      & .product-description {
        padding-bottom: 18px;
        font-size: 14px;
        font-weight: 500;
        line-height: 24px;
        color: var(--color-grey1)
      }
      & .product-badge {
        margin-bottom: 1.75rem;
        display: inline-flex;
        height: 32px;
        align-items: center;
        justify-content: center;
        border-radius: 32px;
        background-color: var(--color-yellow-digital);
        padding-inline: 1.25rem; /* px-5 */
        font-size: 14px
      }
    }
  }

  /* Mobile Screen */
  @media screen and (width <= 768px) {
    .product-card {
      --padding-top: 46px;
      --min-height: 376px
      & .product-badge {
        margin-bottom: 2rem
      }
    }
  }

  /* Desktop Screen */
  @media screen and (width <= 1024px) {
    .product-card {
      --padding-top: 56px;
      --min-height: 552px;
      & .product-title {
        line-height: 50px
      }
      & .product-description {
        padding-bottom: 18px;
        font-size: 16px
      }
      & .product-badge {
        margin-bottom: 46px;
        height: 40px;
        font-size: 16px
      }
    }
  }
</style>