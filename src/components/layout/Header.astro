---
import Anchor from '@components/ui/Anchor.astro';
import Button from '@components/ui/Button.astro';
import Clock from '@components/shared/Clock.svelte';

const navAnchor = [
  { href: "/", text: "About" },
  { href: "/services", text: "Services" },
  { href: "/showcase", text: "Showcase" },
  { href: "/blog", text: "Blog" },
  { href: "/shop", text: "Shop" },
];
---
<header id="globalheader">
  <Clock client:load />
  <div class="content" role="dialog" aria-modal="true" tabindex="-1">
    <nav id="globalnav" class="haptic-nav" aria-label="Global">
      <ul id="globalnav-list">
        {navAnchor.map(link => (
          <li class="nav-item">
            <Anchor href={link.href} class="nav-anchor">{link.text}</Anchor>
          </li>
        ))}
      </ul>
    </nav>
    <Button id="menutrigger" as="button" type="button" variant="tonal" action="neutral" size="large" aria-controls="globalnav-list" aria-label="Menu" aria-expanded="false" text="Menu" />
  </div>
</header>
<style>
  header#globalheader {
    position: fixed;
    left: max(var(--spacing-sal) + 22px);
    right: max(var(--spacing-sar) + 22px);
    z-index: 4;
    height: fit-content;
    & div.content {
      display: flex;
      position: relative;
      width: 100%;
      height: 100%;
      align-items: center;
      nav#globalnav {
        will-change: opacity, visibility, allow-discrete;
        transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out, allow-discrete 0.3s ease-in-out;
        & ul {
          display: flex;
          gap: 12px;
          & li a.nav-anchor {
            color: var(--color-label-primary);
            text-decoration: none;
            transition: color 150ms
          }
        }
      }
    }
  }
  body.is-menu-open header#globalheader nav#globalnav {
    opacity: 1;
    visibility: visible;
  }
  body.is-menu-open header#globalheader nav#globalnav ul {
    pointer-events: auto;
  }
  @media screen and (max-width: 733px) {
    header#globalheader {
      bottom: max(var(--spacing-sab) + 22px);
      & div.content {
        flex-direction: column;
        nav#globalnav {
          flex-direction: column;
          position: relative;
          z-index: 2;
          content-visibility: hidden;
          visibility: hidden;
          opacity: 0;
          body.is-menu-open & {
            content-visibility: visible;
            visibility: visible;
            opacity: 1
          }
          & ul {
            flex-direction: column
          }
        }
      }
    }
  }
  @media screen and (min-width: 733px) {
    header#globalheader {
      top: max(var(--spacing-sat) + 22px);
      width: fit-content;
      & div.content {
        flex-direction: row;
        gap: 16px;
        & ul {
          flex-direction: row
        }
        & button#menutrigger {
          display: none
        }
      }
    }
  }
</style>
<script src="@scripts/menu.js"></script>